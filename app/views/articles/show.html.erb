<h1><%= @article.title %></h1>
<p>
  <%= @article.text %>
</p>

  <h2>Comments</h2>

  <% @article.comments.each do |comment| %><br />
    <i> <%= comment.author %> said: </i><br />
    <%= comment.body %><br />
  <% end %>


  <h3>Add comments</h3>

<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>

</p>
